<div class="container-fluid" id='mia-profile' data-mia='<%- mia.id %>'>
  <div class="row">
    <div class="col-sm-2 col-md-2 sidebar">
      <ul class="nav nav-sidebar">
        <li class="active"><a href="#resumen">Resumen</a></li>
        <li><a href="#documentos">Documentos</a></li>
        <li><a href="#mapa">Mapa</a></li>
        <li><a href="#exportar">Exportar</a></li>
      </ul>
    </div>
    <div class="col-sm-10 col-sm-offset-2 col-md-10 col-md-offset-2 main">
      <a name='resumen'></a>
      <h2 class="sub-header"><%- mia.proyecto %></h2>
      <dl class="dl-horizontal">
        <dt>Clave</dt>
        <dd id='clave'><%- mia.clave %></dd>

        <dt>Entidad</dt>
        <dd><%- mia.entidad %></dd>

        <dt>Fecha de ingreso</dt>
        <dd><%=: mia.fecha_de_ingreso | formatDate %></dd>

        <dt>Tramite</dt>
        <dd><%- mia.tramite %></dd>

        <dt>Estado Actual</dt>
        <dd><%- mia.status.desc %> (<%- mia.estado %>)</dd>
      </dl>
      <hr/>
      <a name='documentos'></a>
      <h3>Documentos</h3>
      <a href='<%- mia.resumen_status().link %>' type="button" class="btn btn-<%- mia.resumen_status().button %> btn-lg" <%= mia.resumen_status().disabled %>>
        Resumen 
        <span class="badge">
          <%= mia.resumen_status().label %>
        </span>
      </a>
      
      <a href='<%- mia.estudio_status().link %>' type="button" class="btn btn-<%- mia.estudio_status().button %> btn-lg" <%= mia.estudio_status().disabled %>>
        Estudio 
        <span class="badge">
          <%= mia.estudio_status().label %>
        </span>
      </a>
      
      <a href='<%- mia.resolutivo_status().link %>' type="button" class="btn btn-<%- mia.resolutivo_status().button %> btn-lg" <%= mia.resolutivo_status().disabled %>>
        Resolutivo 
        <span class="badge">
          <%= mia.resolutivo_status().label %>
        </span>
      </a>
      <hr/>
      <%- partial('map-wizard')%>
    </div>

  </div>
</div>
<%- block('localScripts', '<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBlzbyX3J7GwOXdoRwMDfYVbqxNG1D9Jy0&sensor=false" ></script>') %>